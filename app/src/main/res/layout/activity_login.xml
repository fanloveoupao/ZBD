<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f6f6f6"
    android:orientation="vertical"
    tools:context="com.zbd.app.activity.LoginActivity">

    <com.tgnet.app.utils.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_f47b7e" />

    <LinearLayout
        android:id="@+id/ll_login_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_login_account" />

        <com.tgnet.app.utils.ui.widget.EnlargeCrossEditText
            android:id="@+id/et_login_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/icon_clear"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入账号"
            android:imeOptions="actionNext"
            android:maxLength="40"
            android:singleLine="true"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_bbbbbb"
            android:textSize="@dimen/font_28" />


    </LinearLayout>


    <View
        style="@style/grayCcccccLineStyle"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <LinearLayout
        android:id="@+id/ll_login_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_login_pwd" />

        <com.tgnet.app.utils.ui.widget.EnlargeCrossEditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/icon_clear"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_bbbbbb"
            android:textSize="@dimen/font_28" />
    </LinearLayout>

    <View
        style="@style/grayCcccccLineStyle"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <TextView
        android:id="@+id/tv_login_forget_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginRight="@dimen/dp_40"
        android:gravity="center_vertical|right"
        android:text="忘记密码"
        android:textColor="@color/gray_666666"
        android:textSize="@dimen/font_26" />

    <TextView
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:background="@drawable/shape_red_radius_8_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white_ffffff"
        android:textSize="@dimen/font_32" />

    <TextView
        android:id="@+id/bt_registration"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_white_radius_8_bg"
        android:gravity="center"
        android:text="新用户注册"
        android:textColor="@color/red_f47b7e"
        android:textSize="@dimen/font_32" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_wx"

            android:layout_centerHorizontal="true"
            android:text="第三方登录"
            android:textColor="@color/red_f47b7e"
            android:textSize="@dimen/font_32" />

        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:drawableTop="@mipmap/icon_wx"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/red_f47b7e"
            android:textSize="@dimen/font_32" />
    </RelativeLayout>
</LinearLayout>
