<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="NoTitleNoTraslucentTheme">
        <item name="android:windowBackground">@mipmap/welcome_pic</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="horizontal_line">
        <item name="android:background">@color/gray_cccccc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="grayDadadaLineStyle">
        <item name="android:background">@color/gray_dadada</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="grayE3e3e3LineStyle">
        <item name="android:background">@color/gray_e3e3e3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChatEditRadinButton" parent="CustomRadioButton">
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="ToolbarIconStyle" parent="CustomRadioButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/selector_toolbar_text_color</item>
    </style>

</resources>
