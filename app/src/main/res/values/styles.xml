<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="NoTitleNoTraslucentTheme">
        <item name="android:windowBackground">@mipmap/welcome_pic</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="grayCcccccLineStyle">
        <item name="android:background">@color/gray_cccccc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
    </style>

    <style name="grayDadadaLineStyle">
        <item name="android:background">@color/gray_dadada</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
    </style>

    <style name="grayE3e3e3LineStyle">
        <item name="android:background">@color/gray_e3e3e3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
    </style>
</resources>
