<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_fff_radius_12"
    android:paddingBottom="5dp">
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="13dp"
        android:ellipsize="end"
        android:gravity="left"
        android:textColor="@color/grey_808080"
        android:textSize="@dimen/font_28"
        android:text="分享到" />
    <View
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_e3e3e3"
       />
   <TextView
       android:id="@+id/tv_weixin_circle"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:drawablePadding="10dp"
       android:drawableLeft="@mipmap/icon_share_weixin_circle"
       android:paddingLeft="24dp"
       android:gravity="center_vertical|left"
       android:textColor="@color/black_333333"
       android:textSize="@dimen/font_30"
       android:text="朋友圈"
       />
    <TextView
        android:id="@+id/tv_qzone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/icon_share_qzone"
        android:paddingLeft="24dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_30"
        android:text="QQ空间"
        />
    <TextView
        android:id="@+id/tv_wenxin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/icon_share_weixin"
        android:paddingLeft="24dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_30"
        android:text="微信好友"
        />
    <TextView
        android:id="@+id/tv_qq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/icon_share_qq"
        android:paddingLeft="24dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_30"
        android:text="QQ好友"
        />
    <TextView
        android:id="@+id/tv_sms"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/icon_share_sms"
        android:paddingLeft="24dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_30"
        android:text="短信好友"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:lines="3"
        android:layout_marginTop="2dp"
        android:text="提示：朋友们通过您的分享也可领取优惠券，提醒他们别错过哦！分享后请返回来，确保激活成功。"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/font_24"
        android:visibility="gone" />
</LinearLayout>